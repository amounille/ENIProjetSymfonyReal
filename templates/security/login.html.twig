{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    <style>
        *{
            font-family: 'Roboto', sans-serif;
        }

        form {
            margin-top: 200px !important;
            background-color: #fff;
            padding: 3rem;
            border-radius: 20px;
            max-width: 400px;
            margin: 5% auto;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 1.8rem;
            text-align: center;
            color: #6A0DAD; /* Violet */
            margin-bottom: 1.5rem;
        }

        label {
            font-size: 1rem;
            color: #6A0DAD;
        }

        input[type="email"],
        input[type="password"] {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            padding: 0.8rem;
            width: 95%;
            margin-bottom: 1.5rem;
            border-radius: 10px;
            transition: border-color 0.3s ease;
            color: #333;
        }

        input:focus {
            outline: none;
            border-color: #6A0DAD;
            box-shadow: 0 0 10px rgba(106, 13, 173, 0.2);
        }

        button {
            background-color: #6A0DAD;
            border: none;
            padding: 0.8rem 1.2rem;
            width: 100%;
            border-radius: 10px;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #5a0b9f;
        }

        .checkbox {
            text-align: left;
            margin-bottom: 1rem;
        }
        .checkbox2 {
            text-align: right;
            margin-bottom: 1rem;
        }

        .checkbox label {
            color: #6A0DAD;
        }

        .alert-danger {
            background-color: rgba(255, 0, 0, 0.1);
            color: #ff5f5f;
            padding: 0.8rem;
            border-radius: 10px;
            text-align: center;
        }

        a {
            color: #6A0DAD;
        }

        a:hover {
            color: #5a0b9f;
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

        <label for="inputMail">E-mail</label>
        <input type="email" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>

        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <div class="checkbox2 mb-3">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">Valider</button>
    </form>
{% endblock %}
