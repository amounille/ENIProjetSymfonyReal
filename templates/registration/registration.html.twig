{# templates/registration/registration.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
<div class="registration">
    <div class="containerregistration">
        <div class="row -spacing-a">
        </div>
        <div class="row -spacing-a">
            <div class="col-md-8">
                <h5>Formulaire d'inscription</h5>
                <div class="row -spacing-b">
                    <div class="col-md-12">
                        {{ form_start(registrationForm) }}

                        <div class="form-group">
                            {{ form_label(registrationForm.nom) }}
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.nom) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.prenom) }}
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.prenom) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.telephone) }}
                            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.telephone) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.mail) }}
                            {{ form_widget(registrationForm.mail, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.mail) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword.first) }}
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword.second) }}
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.roles) }}
                            {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.roles) }}
                        </div>

                        <button type="submit" class="btn btn--green">S'inscrire</button>
                        {{ form_end(registrationForm) }}

                        <p class="mt-3">
                            Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
        .col-md-12.text-right {
            margin-top: 40px;
        }

        h1 {
            text-transform: uppercase;
            color: black;
            font-size: 2.5rem;
        }

        h5 {
            text-transform: uppercase;
            color: black;
            font-size: 1.563rem;
        }

        .-spacing-a {
            margin-top: 3.125rem;
        }

        .-spacing-b {
            margin-top: 1.875rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border-radius: 0;
            border: 1px solid #ddd;
        }

        .btn {
            border: none;
            background: #FFF;
            border-radius: 0;
            padding: 0.875rem 0.625rem;
            cursor: pointer;
        }

        .btn--green {
            background: #6A0DAD;
            color: #FFF;
        }a

        p.mt-3 {
            margin-top: 1rem;
        }
    </style>
{% endblock %}
