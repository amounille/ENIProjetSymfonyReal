{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row -spacing-a">
            <div class="col-md-12">
                <h1>Profil de {{ user.nom }} {{ user.prenom }}</h1>
            </div>
        </div>
        <div class="row -spacing-a">
            <div class="col-md-8">
                <h5>Informations Générales</h5>
                <div class="row -spacing-b">
                    <div class="col-md-12">
                        <table class="table-profile">
                            <tr>
                                <td><strong>Nom :</strong></td>
                                <td>{{ user.nom }}</td>
                            </tr>
                            <tr>
                                <td><strong>Prénom :</strong></td>
                                <td>{{ user.prenom }}</td>
                            </tr>
                            <tr>
                                <td><strong>Email :</strong></td>
                                <td>{{ user.mail }}</td>
                            </tr>
                            <tr>
                                <td><strong>Téléphone :</strong></td>
                                <td>{{ user.telephone }}</td>
                            </tr>
                            <tr>
                                <td><strong>Campus :</strong></td>
                                <td>{{ user.participantCampus ? user.participantCampus.nom : 'Non attribué' }}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-12 text-right">
                        <a href="{{ path('app_participant_edit', {'id': user.id}) }}" class="btn btn--green">

                            <span class="btn__label">Modifier mes informations</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .col-md-12.text-right {
            margin-top: 40px;
        }

        h1 {
            text-transform: uppercase;
            color: black;
            font-size: 2.5rem;
        }

        h5 {
            text-transform: uppercase;
            color: black;
            font-size: 1.563rem;
        }

        .-spacing-a {
            margin-top: 3.125rem;
        }
        .-spacing-b {
            margin-top: 1.875rem;
        }

        .table-profile {
            width: 100%;
            border-collapse: collapse;
        }

        .table-profile td {
            padding: 0.5rem;
            vertical-align: top;
        }

        .table-profile td:first-child {
            width: 150px;
            font-weight: bold;
            color: black;
        }

        .table-profile td:last-child {
            color: black;
        }

        .btn {
            border: none;
            background: #FFF;
            border-radius: 0;
            padding: 0.875rem 0.625rem;
            cursor: pointer;
        }


        .btn--green {
            background: #6A0DAD;
            color: #FFF;
        }
    </style>
{% endblock %}
