{% extends 'base.html.twig' %}

{% block title %}Sortie - {{ sortie.nom }}{% endblock %}

{% block body %}
    <div class="container2">
        <div class="row -spacing-a">
            <div class="col-md-12">
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}


                <!-- Titre de la sortie -->
                <h1 class="page-title">{{ sortie.nom }}</h1>

                <!-- Détails de la sortie -->
                <div class="sortie-details">
                    <p><strong>Date de début:</strong> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</p>
                    <p><strong>Lieu:</strong> {{ sortie.sortieLieu.nom }}</p>
                    <p><strong>Informations:</strong> {{ sortie.infosSortie|raw }}</p>
                </div>

                <!-- Liste des participants -->
                <h3 class="section-title">Participants inscrits:</h3>
                <ul class="participants-list">
                    {% for participant in sortie.participants %}
                        <li>{{ participant.nom }} {{ participant.prenom }}</li>
                    {% endfor %}
                </ul>

                <!-- Boutons d'inscription/désinscription -->
                <div class="actions">
                    <a href="{{ path('app_home') }}" class="btn btn-inscription">Retour</a>
                    {% if not sortie.participants.contains(app.user) %}
                        <a href="{{ path('sortie_inscription', {id: sortie.id}) }}" class="btn btn-inscription">S'inscrire</a>
                    {% else %}
                        <p class="inscrit-text">Vous êtes déjà inscrit à cette sortie.</p>
                        <a href="{{ path('sortie_desinscription', {id: sortie.id}) }}" class="btn btn-danger">Se désinscrire</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Global styles */
        .container2 {
            text-align: center;
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        h1.page-title {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            font-weight: 700;
        }

        h3.section-title {
            font-size: 1.5rem;
            color: #6A0DAD;
            margin-bottom: 1rem;
            text-transform: uppercase;
            font-weight: 600;
        }

        .sortie-details {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 2rem;
        }

        .sortie-details p {
            font-size: 1.125rem;
            margin-bottom: 0.5rem;
            color: #333;
        }

        /* Participants list */
        .participants-list {
            list-style-type: none;
            padding: 0;
            margin: 0 0 2rem;
        }

        .participants-list li {
            font-size: 1.125rem;
            padding: 8px 0;
            border-bottom: 1px solid #ddd;
        }

        /* Inscription/Desinscription */
        .inscrit-text {
            font-size: 1.125rem;
            color: green;
            margin-bottom: 1rem;
        }

        .actions {
            margin-top: 1.5rem;
        }

        .btn {
            padding: 12px 18px;
            border-radius: 5px;
            text-transform: uppercase;
            font-size: 0.875rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            color: #fff;
        }

        .btn-inscription {
            background-color: #28a745;
            color: #fff;
        }

        .btn-inscription:hover {
            background-color: #218838;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .alert {
            padding: 15px 20px;
            margin-bottom: 1.5rem;
            border-radius: 5px;
            font-size: 1.125rem;
            font-weight: 500;
            position: relative;
            text-align: center;
            transition: all 0.3s ease;
        }

        /* Alertes de succès (inscriptions réussies, etc.) */
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border-left: 5px solid #28a745;
        }

        /* Alertes de danger (erreurs, désinscriptions, interdictions) */
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-left: 5px solid #dc3545;
        }

        /* Alertes d'information (messages d'information) */
        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            border-left: 5px solid #17a2b8;
        }

        /* Alertes d'avertissement (inscriptions fermées, etc.) */
        .alert-warning {
            background-color: #fff3cd;
            color: #856404;
            border-left: 5px solid #ffc107;
        }

        /* Icônes et texte */
        .alert p {
            margin: 0;
        }

        /* Ajout d'un bouton de fermeture si nécessaire */
        .alert .close-btn {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 1.2rem;
            color: inherit;
            cursor: pointer;
        }

        .alert .close-btn:hover {
            opacity: 0.8;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            h1.page-title {
                font-size: 2rem;
            }

            h3.section-title {
                font-size: 1.25rem;
            }

            .sortie-details p,
            .participants-list li {
                font-size: 1rem;
            }

            .btn {
                font-size: 0.8rem;
                padding: 10px 16px;
            }
        }
    </style>
{% endblock %}
