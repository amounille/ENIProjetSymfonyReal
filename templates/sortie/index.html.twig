{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block body %}
    <div class="container">
        <div class="row -spacing-a">
            <div class="col-md-12 text-center">
                <h1 class="page-title">Liste des sorties</h1>
            </div>
        </div>
        <div class="row -spacing-a">
            <div class="col-md-12">
                <table class="table table-striped table-hover">
                    <thead class="table-header">
                    <tr>
                        <th>Nom</th>
                        <th>Date Heure Début</th>
                        <th>Durée</th>
                        <th>Date Limite Inscription</th>
                        <th>Nb Inscription Max</th>
                        <th>Infos Sortie</th>
                        <th>Organisateur</th>
                        <th>État</th>
                        <th>Inscription</th>
                        <th>Participants</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sortie in sorties %}
                        <tr>
                            <td>{{ sortie.nom }}</td>
                            <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                            <td>{{ sortie.duree|date('H:i') }}</td>
                            <td>{{ sortie.dateLimiteInscription|date('d/m/Y H:i') }}</td>
                            <td>{{ sortie.nbInscriptionMax }}</td>
                            <td>{{ sortie.infosSortie|length > 50 ? sortie.infosSortie|slice(0, 50) ~ '...' : sortie.infosSortie|raw}}</td>
                            <td>{{ sortie.sortieParticipant.nom }} {{ sortie.sortieParticipant.prenom }}</td>
                            <td>
                                <span class="badge {{ sortie.sortieEtat.libelle == 'Ouverte' ? 'badge-success' : 'badge-warning' }}">
                                    {{ sortie.sortieEtat.libelle }}
                                </span>
                            </td>
                            <td>
                                {% if sortie.participants.contains(user) %}
                                    <span class="badge badge-info">Inscrit</span>
                                {% elseif sortie.sortieEtat.libelle == 'Ouverte' %}
                                    <span class="badge badge-primary">Non inscrit</span>
                                {% else %}
                                    <span class="badge badge-danger">Inscription fermée</span>
                                {% endif %}
                            </td>
                            <td>{{ sortie.participants|length }} / {{ sortie.nbInscriptionMax }}
                                {% for participant in sortie.participants %}
                                    <p>
                                        <a href="{{ path('app_participant_show', {id: participant.id}) }}">
                                            {{ participant.nom }} {{ participant.prenom }}
                                        </a>
                                    </p>
                                {% else %}
                                    <p>Aucun participant</p>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('sortie_show', {id: sortie.id}) }}" class="btn btn-view">Voir</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11" class="text-center">Aucune sortie disponible</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <style>
        /* Global Styles */
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
        }

        .container {
            max-width: 100%;
            margin: 0 auto;
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        h1.page-title {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 2rem;
            text-transform: uppercase;
            font-weight: 700;
        }

        /* Table Styling */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: #fff;
            border-collapse: separate;
            border-spacing: 0 15px;
        }

        .table th, .table td {
            text-align: center;
            padding: 12px;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        .table-header {
            background-color: #6A0DAD;
            color: #fff;
            text-transform: uppercase;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        /* Button Styles */
        .btn {
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            text-transform: uppercase;
            font-size: 0.9rem;
            transition: background-color 0.3s ease;
        }

        .btn-view {
            background-color: #6A0DAD;
            color: #fff;
        }

        .btn-view:hover {
            background-color: #5a0b99;
        }

        .btn-inscription {
            background-color: #28a745;
            color: #fff;
        }

        .btn-inscription:hover {
            background-color: #218838;
        }

        /* Badge Styles */
        .badge {
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 0.85rem;
            text-transform: uppercase;
            color: #fff;
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-warning {
            background-color: #ffc107;
        }

        .badge-info {
            background-color: #17a2b8;
        }

        .badge-danger {
            background-color: #dc3545;
        }

        .badge-primary {
            background-color: #007bff;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .table th, .table td {
                font-size: 0.9rem;
            }

            .btn {
                font-size: 0.8rem;
                padding: 8px 12px;
            }
        }
    </style>
{% endblock %}
