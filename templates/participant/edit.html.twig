{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container profile-edit-container">
        <div class="profile-edit-header">
            <h1>Modifier mon profil</h1>
        </div>

        <div class="profile-edit-content">
            <div class="profile-image">
                {% if participant.photo %}
                    <img src="{{ asset('uploads/images/' ~ participant.photo) }}" alt="Photo de profil" />
                {% else %}
                    <img src="{{ asset('images/profile-default.jpg') }}" alt="Photo de profil par défaut" />
                {% endif %}
            </div>

            <div class="profile-form">
                {{ form_start(form) }}

                {{ form_widget(form) }}


                <div class="btnnn">
                <button type="submit" class="btn btn--green">{{ button_label|default('Mettre à jour') }}</button>

                <p class="mt-3">
                    {{ include('participant/_delete_form.html.twig') }}
                </p>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <style>
        .btnnn {
            display: flex;
            gap: 20px;
        }
        /* Container et centrage */
        .profile-edit-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }


        .profile-edit-header h1 {
            font-size: 2.5rem;
            text-transform: uppercase;
            color: #333;
        }

        /* Contenu de la page d'édition du profil */
        .profile-edit-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 500px;
        }

        /* Image de profil */
        .profile-image img {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* Formulaire de modification */
        .profile-form {
            width: 100%;
        }

        .profile-form .form-group {
            text-align: left;
        }

        .profile-form label {
            font-weight: bold;
        }

        .profile-form input,
        .profile-form textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 1rem;
        }

        /* Boutons */
        .btn {
            padding: 0.875rem 1.25rem;
            border: none;
            border-radius: 5px;
            text-transform: uppercase;
            cursor: pointer;
            font-size: 1rem;
            background-color: #6A0DAD;
            color: #fff;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #5a0b99;
        }

        .btn--green {
            background-color: #6A0DAD;
            color: #fff;
        }

        .btn--green:hover {
            background-color: #5a0b99;
        }

        /* Lien vers l'accueil */
        .mt-3 a {
            color: #6A0DAD;
            text-decoration: none;
        }

        .mt-3 a:hover {
            text-decoration: underline;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .profile-edit-header h1 {
                font-size: 2rem;
            }

            .profile-image img {
                width: 150px;
                height: 150px;
            }

            .profile-form input,
            .profile-form textarea {
                font-size: 1rem;
            }

            .btn {
                font-size: 0.875rem;
                padding: 0.75rem 1rem;
            }
        }
    </style>
{% endblock %}
