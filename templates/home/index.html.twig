{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des Sorties</h1>
        <form method="GET" action="{{ path('app_home') }}" class="mb-4">
            <div class="input-group mb-3">
                <input type="text" name="search" class="form-control" placeholder="Rechercher par nom" value="{{ app.request.get('search') }}">
                <select name="campus" class="form-select">
                    <option value="">Tous les campus</option>
                    {% set campuses = sorties|map(sortie => sortie.sortieCampus.nom)|reduce((carry, item) => item in carry ? carry : carry|merge([item]), []) %}
                    {% for campus in campuses %}
                        <option value="{{ campus }}" {% if campus == app.request.get('campus') %}selected{% endif %}>{{ campus }}</option>
                    {% endfor %}
                </select>



                <input type="date" name="date_debut" class="form-control" placeholder="Date de début" value="{{ app.request.get('date_debut') }}">
                <input type="date" name="date_fin" class="form-control" placeholder="Date de fin" value="{{ app.request.get('date_fin') }}">
                <div class="form-check">
                    <input type="checkbox" name="created_by_me" class="form-check-input" id="created_by_me" {% if app.request.get('created_by_me') %}checked{% endif %}>
                    <label class="form-check-label" for="created_by_me">Afficher uniquement mes sorties</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="inscrit" class="form-check-input" id="inscrit" {% if app.request.get('inscrit') %}checked{% endif %}>
                    <label class="form-check-label" for="inscrit">Afficher uniquement les sorties auxquelles je suis inscrit</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" name="non_inscrit" class="form-check-input" id="non_inscrit" {% if app.request.get('non_inscrit') %}checked{% endif %}>
                    <label class="form-check-label" for="non_inscrit">Afficher uniquement les sorties où je ne suis pas inscrit</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="show_completed" class="form-check-input" id="show_completed" {% if app.request.get('show_completed') %}checked{% endif %}>
                    <label class="form-check-label" for="show_completed">Afficher les sorties terminées</label>
                </div>

                <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
            </div>
        </form>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Date Heure Début</th>
                <th>Durée</th>
                <th>Date Limite Inscription</th>
                <th>Nb Inscription Max</th>
                <th>Infos Sortie</th>
                <th>Organisateur</th>
                <th>État</th>
                <th>Inscription</th>
                <th>Participants</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                {% if sortie.sortieEtat and sortie.sortieEtat.libelle == 'Ouverte' %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i') : 'N/A' }}</td>
                        <td>{{ sortie.duree ? sortie.duree|date('H:i') : 'N/A' }}</td>
                        <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i') : 'N/A' }}</td>
                        <td>{{ sortie.nbInscriptionMax }}</td>
                        <td>{{ sortie.infosSortie|raw }}</td>
                        <td>{{ sortie.sortieParticipant.nom }}</td>

                        <td>
                            {{ sortie.sortieEtat ? sortie.sortieEtat.libelle : 'État non défini' }}
                        </td>

                        <td>
                            {% if sortie.participants|length > 0 %}
                                <span class="inscrit">Inscrit</span>
                            {% else %}
                                <span class="non-inscrit">Non inscrit</span>
                            {% endif %}
                        </td>
                        <td>
                            <ul>
                                {% for participant in sortie.participants %}
                                    <li>
                                        <a href="{{ path('app_participant_show', {id: participant.id}) }}">
                                            {{ participant.nom }} {{ participant.prenom }}
                                        </a>
                                    </li>
                                {% else %}
                                    <li>Aucun participant</li>
                                {% endfor %}
                            </ul>
                        </td> <!-- Affiche les participants inscrits avec un lien vers leur profil -->
                        <td>
                            <a href="{{ path('sortie_show', {id: sortie.id}) }}" class="btn btn-view btn-sm">Afficher</a>
                            <a href="{{ path('admin', {crudAction: 'edit', crudControllerFqcn: 'App\\Controller\\Admin\\SortieCrudController', entityId: sortie.id}) }}" class="btn btn-primary btn-sm">Éditer</a>
                            <form method="post" action="{{ path('sortie_delete', {id: sortie.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">
                                <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11" class="text-center">Aucune sortie disponible.</td>
                    </tr>
                {% endif %}

            {% endfor %}
            </tbody>
        </table>
    </div>


<style>
        .table {
            width: 100%;
            margin: 20px 0;
            border-collapse: collapse;
        }

        .thead-dark {
            background-color: #343a40;
            color: white;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border: 1px solid #dee2e6;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .btn {
            font-size: 0.9rem;
            padding: 5px 10px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-view {
            background-color: #28a745;
            color: white;
        }

        .btn-view:hover {
            background-color: #218838;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .text-center {
            text-align: center;
        }

        .table td[colspan] {
            font-style: italic;
            color: #6c757d;
        }

        .inscrit {
            color: green;
            font-weight: bold;
        }

        .non-inscrit {
            color: red;
            font-weight: bold;
        }
    </style>
{% endblock %}
