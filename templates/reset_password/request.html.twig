
{% block stylesheets %}
    <style>
        * {
            font-family: 'Roboto', sans-serif;
        }
        .password-reset {
            justify-content: center;
            display: flex;
            padding-top: 200px;
        }
        .password-reset-wrapper {
            max-width: 600px;
            padding: 20px 50px 35px 30px;
            background-color: #fff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .password-reset-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #4b047f;
            text-align: center;
        }

        .password-reset-alert {
            color: red;
            font-size: 14px;
            margin-bottom: 20px;
            text-align: center;
        }

        .password-reset-form-group {
            margin-bottom: 20px;
        }

        .password-reset-input {
            padding: 10px;
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

        .password-reset-input:focus {
            border-color: #4b047f;
            outline: none;
        }

        .password-reset-instructions {
            font-size: 12px;
            color: #555;
            margin-bottom: 10px;
            text-align: center;
        }

        .password-reset-btn {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #4b047f;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
            display: inline-block;
        }

        .password-reset-btn:hover {
            background-color: #4b047f;
        }

    </style>
{% endblock %}

{% block body %}
<div class="password-reset">
<div class="password-reset-wrapper">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="password-reset-alert" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="password-reset-title">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
        <div class="password-reset-form-group">
            {{ form_row(requestForm.mail, {'attr': {'class': 'password-reset-input'}}) }}
        </div>
        <div class="password-reset-instructions">
            <small>
                Saisissez votre adresse email, nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="password-reset-btn">Envoyer l'email de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
</div>
</div>
{% endblock %}
